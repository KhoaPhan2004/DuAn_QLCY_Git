@model IEnumerable<DuAn_QLCY.Models.Project>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    html, body {
        overflow-x: hidden;
    }

</style>
<div class="container-fluid">
    <!-- Header -->
    <div class="row bg-dark text-white py-3 mb-4">
        <div class="col-12 text-center">
            <h1>Admin Dashboard</h1>
            <p>Welcome back! Here's an overview of your system.</p>
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="row text-center g-3 mb-4">
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card card-stat bg-primary text-white">
                <div class="card-body">
                    <h5>Total Employees</h5>
                    <h2>@ViewBag.TotalEmployees</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card card-stat bg-success text-white">
                <div class="card-body">
                    <h5>Total Projects</h5>
                    <h2>@ViewBag.TotalProjects</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card card-stat bg-warning text-white">
                <div class="card-body">
                    <h5>Total Clients</h5>
                    <h2>@ViewBag.TotalClients</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card card-stat bg-danger text-white">
                <div class="card-body">
                    <h5>Total Revenue</h5>
                    <h2>$@ViewBag.Revenue</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Tables -->
    <div class="row">
        <!-- Chart Section -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Sales Overview</h5>
                    <canvas id="salesChart" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <!-- Table Section -->
        
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Projects</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Project Name</th>
                                <th>Status</th>
                                <th>Manager</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ProjectId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ProjectName)</td>
                                    <td>
                                        @{
                                            string statusClass = item.Status switch
                                            {
                                                "Hoàn thành" => "bg-success",
                                                "Đang triển khai" => "bg-warning",
                                                "Chưa bắt đầu" => "bg-danger",
                                                _ => "bg-secondary" // Màu mặc định nếu trạng thái không hợp lệ
                                            };
                                        }
                                        <span class="badge @statusClass">@Html.DisplayFor(modelItem => item.Status)</span>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Manager.LastName)</td>
                                </tr>
                            }

                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Chart.js for Sales Overview
    const ctx = document.getElementById('salesChart').getContext('2d');
    new Chart(ctx, {
        type: 'line', // Type of chart (line, bar, etc.)
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'], // Labels for each data point
            datasets: [{
                label: 'Sales ($)', // Label for the chart
                data: [1200, 1900, 3000, 5000, 2200, 3300, 4100], // Mock sales data
                borderColor: 'rgba(75, 192, 192, 1)', // Line color
                backgroundColor: 'rgba(75, 192, 192, 0.2)', // Background color for the area under the line
                tension: 0.3, // Line smoothness
                fill: true, // Fill the area under the line
            }]
        },
        options: {
            responsive: true, // Make chart responsive
            plugins: {
                legend: {
                    display: true,
                    position: 'top' // Display the legend at the top
                }
            }
        }
    });
</script>

