@model DuAn_QLCY.Models.Project

@{
    ViewData["Title"] = "UpdateProject";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Cập Nhật Thông Tin Dự Án</h1>
    <p class="text-center text-muted mb-4">Điền thông tin dự án vào biểu mẫu bên dưới. Các trường có dấu <span class="text-danger">*</span> là bắt buộc.</p>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="UpdateProject" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="ProjectId" />

                <div class="mb-3">
                    <label asp-for="ProjectName" class="form-label">Tên Dự Án <span class="text-danger">*</span></label>
                    <input asp-for="ProjectName" class="form-control" placeholder="Nhập tên dự án" />
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label">Ngày Bắt Đầu <span class="text-danger">*</span></label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EndDate" class="form-label">Ngày Kết Thúc <span class="text-danger">*</span></label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Trạng Thái</label>
                    <input asp-for="Status" class="form-control" placeholder="Nhập trạng thái" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ManagerId" class="form-label">Quản Lý</label>
                    <select asp-for="ManagerId" class="form-select" asp-items="ViewBag.managersSelectList">
                        <option value="None">Chọn người quản lý</option>
                    </select>
                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ClientId" class="form-label">Khách Hàng</label>
                    <select asp-for="ClientId" class="form-select" asp-items="ViewBag.clientsSelectList">
                        <option value="None">Chọn khách hàng</option>
                    </select>
                    <span asp-validation-for="ClientId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <input type="submit" value="Cập Nhật" class="btn btn-primary px-5 py-2" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
