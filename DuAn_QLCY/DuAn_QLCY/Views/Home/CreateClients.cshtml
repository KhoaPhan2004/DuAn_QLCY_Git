@model DuAn_QLCY.Models.Client

@{
    ViewData["Title"] = "Create Clients";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Create New Client</h1>
    <div class="card shadow-lg p-4 rounded">
        <h4 class="text-center text-secondary mb-3">Client Information</h4>
        <hr />
        <form asp-action="CreateClients">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Company Name -->
            <div class="mb-4">
                <label asp-for="CompanyName" class="form-label fs-5 fw-bold text-dark">Company Name</label>
                <input asp-for="CompanyName" class="form-control form-control-lg shadow-sm" placeholder="Enter company name" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>

            <!-- Contact Name -->
            <div class="mb-4">
                <label asp-for="ContactName" class="form-label fs-5 fw-bold text-dark">Contact Name</label>
                <input asp-for="ContactName" class="form-control form-control-lg shadow-sm" placeholder="Enter contact name" />
                <span asp-validation-for="ContactName" class="text-danger"></span>
            </div>

            <!-- Contact Email -->
            <div class="mb-4">
                <label asp-for="ContactEmail" class="form-label fs-5 fw-bold text-dark">Contact Email</label>
                <input asp-for="ContactEmail" class="form-control form-control-lg shadow-sm" placeholder="Enter contact email" />
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="mb-4">
                <label asp-for="PhoneNumber" class="form-label fs-5 fw-bold text-dark">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control form-control-lg shadow-sm" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="text-center mb-4">
                <input type="submit" value="Create Client" class="btn btn-primary btn-lg px-5 py-3 fw-bold" />
            </div>
        </form>

        <div class="text-center">
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to Client List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
