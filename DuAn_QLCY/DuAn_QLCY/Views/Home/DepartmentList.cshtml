@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IEnumerable<DuAn_QLCY.Models.Department>

@{
    ViewData["Title"] = "DepartmentList";
}

<h1 class="text-center">Department List</h1>

<p>
    <a asp-action="CreateDepartment" class="btn btn-success">Create New Department</a>
</p>

<!-- Bảng danh sách các phòng ban -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.DepartmentName)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.ActiveFrom)</th>
            <th>@Html.DisplayNameFor(model => model.ActiveTo)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.ActiveFrom)</td>
                <td>@Html.DisplayFor(modelItem => item.ActiveTo)</td>
                <td>
                    <!-- Các nút hành động -->
                    <a asp-action="UpdateDepartment" asp-route-id="@item.DepartmentId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.DepartmentId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="DeleteDepartment" asp-route-id="@item.DepartmentId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Phân trang -->
<div class="d-flex justify-content-center">
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("DepartmentList", new { page = page }),
            new X.PagedList.Mvc.Core.PagedListRenderOptions
    {
        ContainerDivClasses = new[] { "navigation" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" }
    })
</div>
