@model DuAn_QLCY.Models.Employee

@{
    ViewData["Title"] = "DetailEmployees";
}

<h1 class="text-center mb-4">Employee Detail</h1>

<div class="container">
    <div class="row">
        <!-- Employee Information Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4>Employee Information</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-4">Position</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Position)</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Phone Number</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DayOfBirth)</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

                        <dt class="col-sm-4">Joining Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.JoiningDate)</dd>

                        <dt class="col-sm-4">Nationality</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nationality)</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Department and Type Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4>Department & Type</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Department.DepartmentName)</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Type.TypeName)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Employment Contracts and Salary Card -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4>Employment Contracts</h4>
                </div>
                <div class="card-body">
                    <ul>
                        @foreach (var contract in Model.EmploymentContracts)
                        {
                            <li>@contract.ContractType</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h4>Salary</h4>
                </div>
                <div class="card-body">
                    <p>@Model.Salary?.Salary1</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Performance KPIs and Projects Card -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h4>Performance KPIs</h4>
                </div>
                <div class="card-body">
                    <ul>
                        @foreach (var kpi in Model.PerformanceKpis)
                        {
                            <li>@kpi.Kpivalue</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4>Projects</h4>
                </div>
                <div class="card-body">
                    <ul>
                        @foreach (var project in Model.Projects)
                        {
                            <li>@project.ProjectName</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Tasks, Time Trackings, and Technologies Card -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4>Tasks</h4>
                </div>
                <div class="card-body">
                    <ul>
                        @foreach (var task in Model.Tasks)
                        {
                            <li>@task.TaskName</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4>Time Trackings</h4>
                </div>
                <div class="card-body">
                    <ul>
                        @foreach (var tracking in Model.TimeTrackings)
                        {
                            <li>@tracking.Date: @tracking.HoursWorked hrs</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h4>Technologies</h4>
                </div>
                <div class="card-body">
                    <ul>
                        @foreach (var tech in Model.EmployeeTechnologies)
                        {
                            <li>@tech.Tech.TechName</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Trainings, Insurances, and Leaves Card -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h4>Trainings</h4>
                </div>
                <div class="card-body">
                    <ul>
                        @foreach (var training in Model.EmployeeTrainings)
                        {
                            <li>@training.Program.ProgramName</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4>Insurances</h4>
                </div>
                <div class="card-body">
                    <ul>
                        @foreach (var insurance in Model.Insurances)
                        {
                            <li>@insurance.InsuranceCode</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4>Leaves</h4>
                </div>
                <div class="card-body">
                    <ul>
                        @foreach (var leave in Model.Leaves)
                        {
                            <li>@leave.StartDate - @leave.EndDate: @leave.Reason</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation buttons -->
    <div class="text-center">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.EmployeeId">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
