@model IEnumerable<DuAn_QLCY.Models.Client>

@{
    ViewData["Title"] = "Clients List";
}

<h1 class="mb-4">Clients List</h1>

<p>
    <a class="btn btn-primary" asp-action="CreateClients">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
            <th>@Html.DisplayNameFor(model => model.ContactName)</th>
            <th>@Html.DisplayNameFor(model => model.ContactEmail)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                <td>@Html.DisplayFor(modelItem => item.ContactName)</td>
                <td>@Html.DisplayFor(modelItem => item.ContactEmail)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="UpdateClients" asp-route-id="@item.ClientId">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ClientId">
                        <i class="fas fa-eye"></i> Details
                    </a>
                    <a class="btn btn-danger btn-sm" asp-action="DeleteClients" asp-route-id="@item.ClientId" onclick="return confirm('Are you sure you want to delete this client?');">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
