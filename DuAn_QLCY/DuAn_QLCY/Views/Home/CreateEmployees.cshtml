@model DuAn_QLCY.Models.Employee

@{
    ViewData["Title"] = "CreateEmployees";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Thêm Nhân Viên Mới</h1>
    <p class="text-center text-muted mb-4">Điền thông tin nhân viên vào biểu mẫu bên dưới. Các trường có dấu <span class="text-danger">*</span> là bắt buộc.</p>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="CreateEmployees" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label">Họ <span class="text-danger">*</span></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Nhập họ nhân viên" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label">Tên <span class="text-danger">*</span></label>
                        <input asp-for="LastName" class="form-control" placeholder="Nhập tên nhân viên" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label">Phòng Ban <span class="text-danger">*</span></label>
                    <select asp-for="DepartmentId" class="form-select" asp-items="@ViewBag.DepartmentsSelectList">
                        <option value="None">Chọn phòng ban</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Position" class="form-label">Chức Vụ</label>
                    <input asp-for="Position" class="form-control" placeholder="Nhập chức vụ" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label">Số Điện Thoại</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="TypeId" class="form-label">Loại Nhân Viên</label>
                    <select asp-for="TypeId" class="form-select" asp-items="@ViewBag.EmployeeTypesSelectList">
                        <option value="None">Chọn loại nhân viên</option>
                    </select>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="DayOfBirth" class="form-label">Ngày Sinh</label>
                        <input asp-for="DayOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="DayOfBirth" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Gender" class="form-label">Giới Tính</label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">Chọn giới tính</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="JoiningDate" class="form-label">Ngày Gia Nhập</label>
                        <input asp-for="JoiningDate" type="date" class="form-control" />
                        <span asp-validation-for="JoiningDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Nationality" class="form-label">Quốc Tịch</label>
                        <input asp-for="Nationality" class="form-control" placeholder="Nhập quốc tịch" />
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Địa Chỉ</label>
                    <textarea asp-for="Address" class="form-control" rows="3" placeholder="Nhập địa chỉ"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <input type="submit" value="Thêm Mới" class="btn btn-primary px-5 py-2" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
