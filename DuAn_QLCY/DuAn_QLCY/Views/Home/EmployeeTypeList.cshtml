@model IEnumerable<DuAn_QLCY.Models.EmployeeType>

@{
    ViewData["Title"] = "Danh Sách Loại Nhân Viên";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Danh Sách Loại Nhân Viên</h1>
    <p class="text-center text-muted mb-4">Dưới đây là danh sách các loại nhân viên. Bạn có thể chỉnh sửa, xem chi tiết hoặc xóa thông tin.</p>
    
    <div class="text-end mb-3">
        <a asp-action="CreateEmployeeType" class="btn btn-success btn-lg">Thêm Loại Nhân Viên</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.TypeName)</th>
                <th class="text-center">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TypeName)</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="UpdateEmployeeType" asp-route-id="@item.TypeId" class="btn btn-warning btn-sm btn-action">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.TypeId" class="btn btn-info btn-sm btn-action btn-detail">Chi Tiết</a>
                            <a asp-action="DeleteEmployeeType" asp-route-id="@item.TypeId" class="btn btn-danger btn-sm btn-action" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .btn-action {
        font-size: 1rem; 
        padding: 6px 12px; 
        margin-right: 3px; 
        border-radius: 8px;
    }

    .btn-detail{
        font-size: 1rem;
        padding: 4px 12px;
        border-radius: 8px;
    }

    .btn-group .btn {
        margin-right: 3px; 
    }
</style>
