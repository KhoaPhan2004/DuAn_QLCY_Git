@model DuAn_QLCY.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Thêm Phòng Ban Mới</h1>
    <p class="text-center text-muted mb-4">Điền thông tin phòng ban vào biểu mẫu bên dưới. Các trường có dấu <span class="text-danger">*</span> là bắt buộc.</p>
    
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="CreateDepartment" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="DepartmentName" class="form-label">Tên Phòng Ban <span class="text-danger">*</span></label>
                    <input asp-for="DepartmentName" class="form-control" placeholder="Nhập tên phòng ban" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô Tả</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Nhập mô tả phòng ban" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ActiveFrom" class="form-label">Ngày Bắt Đầu</label>
                        <input asp-for="ActiveFrom" type="date" class="form-control" />
                        <span asp-validation-for="ActiveFrom" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ActiveTo" class="form-label">Ngày Kết Thúc</label>
                        <input asp-for="ActiveTo" type="date" class="form-control" />
                        <span asp-validation-for="ActiveTo" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <input type="submit" value="Thêm Mới" class="btn btn-primary px-5 py-2" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
