@model IEnumerable<DuAn_QLCY.Models.Project>

@{
    ViewData["Title"] = "Project List";
}

<h1 class="text-center mb-4 animated-title">Danh Sách Dự Án</h1>

<p>
    <a asp-action="CreateProject" class="btn btn-primary mb-3">Tạo Dự Án Mới</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ProjectName)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.Client)</th>
            <th>@Html.DisplayNameFor(model => model.Manager)</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProjectName)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.Client.ClientId)</td>
                <td>@Html.DisplayFor(modelItem => item.Manager.EmployeeId)</td>
                <td class="text-center">
                    <a asp-action="UpdateProject" asp-route-id="@item.ProjectId" class="btn btn-warning btn-lg action-btn">Chỉnh Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.ProjectId" class="btn btn-info btn-lg action-btn">Chi Tiết</a>
                    <a asp-action="DeleteProject" asp-route-id="@item.ProjectId" class="btn btn-danger btn-lg action-btn">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

