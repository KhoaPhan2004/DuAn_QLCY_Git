<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - DuAn_QLCY</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/DuAn_QLCY.styles.css" asp-append-version="true" />
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<meta name="msapplication-TileImage"
		  content="~/assets/img/favicons/mstile-150x150.png" />
	<style>
		.card-stat {
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			transition: transform 0.2s ease;
		}

			.card-stat:hover {
				transform: scale(1.05);
			}
	</style>
	<style>
		/* Sidebar styles */
		.sidebar {
			width: 250px; /* Đặt chiều rộng cố định cho sidebar */
			background-color: #343a40;
			color: #fff;
			height: 100vh; /* Chiều cao toàn màn hình */
			padding-top: 10px;
			position: fixed; /* Giữ sidebar cố định khi cuộn */
		}

			.sidebar a {
				display: block;
				padding: 10px 20px;
				color: #fff;
				text-decoration: none;
				font-size: 16px;
				border-bottom: 1px solid #444;
			}

				.sidebar a:hover {
					background-color: #495057;
				}

		
		/* Main content styles */
		.content {
			margin-left: 250px; /* Đẩy nội dung chính sang bên phải */
			padding: 20px;
		}

	</style>
</head>
<body>


	<div class="d-flex">
		<!-- Sidebar -->
		<div class="sidebar">
			<h4 class="text-center py-3 border-bottom">Admin Panel</h4>
			<a href="#dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
			<a href="#users"><i class="bi bi-people"></i> Users</a>
			<a href="#orders"><i class="bi bi-basket"></i> Orders</a>
			<a href="#reports"><i class="bi bi-graph-up"></i> Reports</a>
			<a href="#products"><i class="bi bi-box"></i> Products</a>
			<a href="#settings"><i class="bi bi-gear"></i> Settings</a>
			<a href="#logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
		</div>

		<!-- Main Content -->
		<div class="container-fluid content">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>

			<footer class="border-top footer text-muted">
				<div class="container">
					&copy; 2024 - ONKT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
				</div>
			</footer>
		</div>
	</div>
	
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
