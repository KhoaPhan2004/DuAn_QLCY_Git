<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DuAn_QLCY</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DuAn_QLCY.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar">
        <div class="logo mb-1 flex items-center" onClick={handleLogoClick}>
            <span class="logo-icon text-2xl">🔥</span>
            <span class="logo-text text-lg ml-2">phoenix</span>
        </div>
        <div class="navbar-search">
            <input type="text" placeholder="Search..." />
        </div>
        <div class="navbar-icons">
            <button class="icon-btn sun-icon">☀️</button>
            <button class="icon-btn bell-icon">🔔</button>
            <div class="avatar">
                <img src="" alt="user avatar" />
            </div>
        </div>
    </nav>

    <div class="sidebar">
        <ul class="nav-list">
            <li class="nav-item">
                <div class="nav-link">
                    <i class="fas fa-home"></i>
                    <span style="margin-left: 8px">Home</span>
                </div>
                <ul class="sub-menu" style="padding-left: 20px">
                    <li><a href="/">E commerce</a></li>
                    <li><a href="/project">Project management</a></li>
                    <li><a href="/">CRM</a></li>
                </ul>
            </li>

            <li class="nav-header">APPS</li>
            <li class="nav-item">
                <a href="/" class="nav-link">
                    <i class="fas fa-shopping-cart"></i>
                    <span style="margin-left: 8px">E commerce</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/" class="nav-link">
                    <i class="fas fa-envelope"></i>
                    <span style="margin-left: 8px">Email</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/" class="nav-link">
                    <i class="fas fa-comments"></i>
                    <span style="margin-left: 8px">Chat</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/list-leave-request" class="nav-link">
                    <i class="fas fa-folder"></i>
                    <span style="margin-left: 8px">Leave Requests</span>
                    <span class="badge" style="background-color: red; color: white">NEW</span>
                </a>
            </li>

            <li class="nav-header">PAGES</li>
            <li class="nav-item">
                <a href="/admin/faq" class="nav-link">
                    <i class="fas fa-question-circle"></i>
                    <span style="margin-left: 8px">Faq</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/leave-form" class="nav-link">
                    <i class="fas fa-tag"></i>
                    <span style="margin-left: 8px">Leave</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/admin/notification" class="nav-link">
                    <i class="fas fa-bell"></i>
                    <span style="margin-left: 8px">Notifications</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/management-Employees" class="nav-link">
                    <i class="fas fa-tag"></i>
                    <span style="margin-left: 8px">Employees Management</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/admin/CreateUser" class="nav-link">
                    <i class="fas fa-tag"></i>
                    <span style="margin-left: 8px">Create User</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/admin/Calendar" class="nav-link">
                    <i class="fas fa-calendar-alt"></i>
                    <span style="margin-left: 8px">Calendar</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/Profile" class="nav-link">
                    <i class="fas fa-user"></i>
                    <span style="margin-left: 8px">Profile</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="content">
        @RenderBody() <!-- Hiển thị nội dung của các trang con tại đây -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
